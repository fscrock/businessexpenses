<h1>Corporations</h1>

<table class="uk-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Owners</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corporations.each do |corporation| %>
      <tr>
        <td><%= corporation.name %></td>
        <td><%= (corporation.is_private) ? "Private" : "Business" %></td>
        <td>
			<%= corporation.owner_ids.map{|theid| @owners[theid]}.join(", ") %>

	
	</td>
        <td><%= link_to 'Show', corporation %></td>
        <td><%= link_to 'Edit', edit_corporation_path(corporation) %></td>
        <td><%= link_to 'Destroy', corporation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


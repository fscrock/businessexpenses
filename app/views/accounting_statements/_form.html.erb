</div>
<div class="field">
  <%= f.label :corporation_id %><br>
  <%= select_tag "accounting_statement[corporation_id]", content_tag(:option,'select one...',:value=>"") + options_from_collection_for_select(Corporation.all, "id", "name", @accounting_statement.corporation_id) %>
</div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
